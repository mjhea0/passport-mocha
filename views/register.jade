extends layout

block content
  .container
    h1 Register Page
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='email', name="username", placeholder='Enter Email' required)
      .form-group
        input.form-control(type='password', name="password", placeholder='Password' required)
      button.btn.btn-default(type='submit') Submit
      a(href='/')
        | &nbsp;
        button.btn.btn-primary(type="button") Cancel